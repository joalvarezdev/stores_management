# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
insert_final_newline = false
indent_style = space
# Set default charset
charset = utf-8
trim_trailing_whitespace = true
indent_size = 2

# Custom Coding Styles for Java files
[*.{java,py}]
indent_style = tab
indent_size = 4

[pom.xml]
insert_final_newline = true
indent_size = 4

[*.sql]
indent_size = 4

[*.go]
indent_style = tab

# Minified JavaScript files shouldn't be changed
[**.min.js]
indent_style = unset

# Tab indentation (no size specified)
[Makefile]
indent_style = tab

[*.{make,mk}]
indent_style = tab
indent_size  = 4

# Batch files use tabs for indentation
[*.bat]
indent_style = tab

[*.graphqls]
indent_style = tab
indent_size = 4